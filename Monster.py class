class Monster:
    level = 1
    health = 100
    armor = 10
    speed = 5
    name = ''
    loot = ''
    xp = 10
    cm = ''
    def __init__(self, level, health, armor, speed, name, loot, xp, cm):
        self.level = 1
        self.health = 100
        self.armor = 10
        self.speed = 5
        self.name = ''
        self.loot = ''
        self.xp = 10
        self.cm = ''
        return
    def combat_message(self):
        print(Monster.cm)
        return combat_message()


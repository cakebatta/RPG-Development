class Monster:
    def __init__(self, level, health, armor, speed, name, loot, xp, cm):
            self.level = level
            self.health = health
            self.armor = armor
            self.speed = speed
            self.name = name
            self.loot = loot
            self.xp = xp
            self.cm = cm
    def combat_message(self):
        cm = self.cm
        print(cm)
        return

class Hero:
    def __init__(self, level, health, armor, speed, name, inventory, head, shoulder, cloak, chestpiece, legguards, weapon, shield, rings):
        level = 1
        health = 100
        armor = 10
        speed = 5
        name = ""
        inventory = []
        head = ""
        shoulder = ""
        cloak = ""
        chestpiece = ""
        legguards = ""
        weapon = ""
        shield = ""
        rings = []
        return



